@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix ref: <https://brickschema.org/schema/Brick/ref#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix db: <https://brickschema.org/schema/Brick/ref/database#> .

db: a owl:Ontology ;
    rdfs:label "Database Ontology" ;
    rdfs:comment "An ontology to define generic database references for reuse in other ontologies." .

db:DatabaseReference a owl:Class ;
    rdfs:label "Database Reference" ;
    rdfs:comment "A generic reference to a database, which can be extended by specific database types." ;
    sh:property [
        sh:path db:url ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path db:port ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path db:authenticationMethod ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
    ] ;
.
db:url a owl:DatatypeProperty ;
    rdfs:range xsd:string ;
    rdfs:label "The Location of the database" .

db:port a owl:DatatypeProperty ;
    rdfs:range xsd:integer ;
    rdfs:label "The port on which the database server is listening" .

db:authenticationMethod a owl:DatatypeProperty ;
    rdfs:range xsd:string ;
    rdfs:label "The authentication method used to connect to the database" .